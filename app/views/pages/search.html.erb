<h1>Star Wars Films</h1>

<%= form_with(url: "/search", local: true, method: "get") do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end %>

<ul>
    <% @results.each do |film| %>
        <li>
            <%= film["title"] %> 
            <%= link_to "show", film_path(film["url"].gsub(/\D/, "")) %>
        </li>
    <% end %>
</ul>
